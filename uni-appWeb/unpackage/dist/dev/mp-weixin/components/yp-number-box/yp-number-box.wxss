.shade{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 100;
	background-color: rgba(0,0,0,.6);
}
.model{
	width: 80%;
	border-radius: 35rpx;
	background-color: #fff;
	padding: 30rpx;
	box-sizing: border-box;
	position: fixed;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	z-index: 200;
}
.modelTitle{
	font-size: 34rpx;
	color: #333;
	margin-bottom: 20rpx;
}
.modelInput{
	width: 100%;
	height: 40rpx;
	font-size: 30rpx;
	color: #333;
	margin-bottom: 40rpx;
}
.modelInput input{
	width: 100%;
