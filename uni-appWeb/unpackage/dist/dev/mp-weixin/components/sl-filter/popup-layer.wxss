
.popup-layer {
	position: absolute;
	z-index: 999999;
	background: rgba(0, 0, 0, .3);
	height: calc(100% - 50px);
	width: 100%;
	left: 0px;
	overflow: hidden;
}
.popup-content {
	position: absolute;
	z-index: 1000000;
	background: #FFFFFF;
	-webkit-transition: all .3s ease;
	transition: all .3s ease;
}

